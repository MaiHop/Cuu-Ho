<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lớp nền (Background) -->
    <item
        android:top="8dp"
        android:bottom="8dp">
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <solid android:color="@color/gray_02_10" />
                    <corners
                        android:topLeftRadius="16dp"
                        android:bottomLeftRadius="16dp" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/primary_secondary" />
                    <corners
                        android:topLeftRadius="16dp"
                        android:bottomLeftRadius="16dp" />
                </shape>
            </item>
        </selector>

    </item>

    <!-- Lớp viền bên trái, trên và dưới (không có bên phải) -->
    <item android:top="8dp"
        android:bottom="8dp">
        <inset
            android:insetRight="-1dp"> <!-- Tạo viền ảo không có bên phải -->
            <shape>
                <stroke
                    android:width="1dp"
                    android:color="@color/primary_main" />
                <corners
                    android:topLeftRadius="16dp"
                    android:bottomLeftRadius="16dp" />
            </shape>
        </inset>
    </item>
</layer-list>

