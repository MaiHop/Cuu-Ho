<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_secondary"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/AppTheme.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:id="@+id/tb_Request_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.05"
            android:lineHeight="28sp"
            android:text="Đánh giá"
            android:textSize="22sp"
            app:titleTextColor="@color/gray_02_10" />

    </androidx.appcompat.widget.Toolbar>

    <!--        Chứa Nội dung chi tiết đơn và Nhóm button-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--       Tạo ScrollView-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp">
            <!--Wrapper các thành phần đánh giá-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <!--Danh sách các thành phần chi tiết đơn-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!--Đánh giá -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="22dp"
                        android:background="@drawable/background_item_normal"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <!--Tiêu đề-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:letterSpacing="0"
                                android:lineHeight="24sp"
                                android:text="Bạn cảm thấy dịch vụ như thế nào?"
                                android:textColor="@color/neutral_main"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textAlignment="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/neutral_light_border"
                            android:orientation="vertical" />
                        <!--Mức độ đánh giá-->
                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="5"
                            android:gravity="center|top"
                            android:paddingTop="20dp"
                            android:paddingBottom="10dp"
                            android:rowCount="1">

                            <ImageButton
                                android:id="@+id/btn_Review_star_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center"
                                android:background="@color/gray_02_100"
                                android:drawablePadding="5dp"
                                android:drawableTint="@drawable/button_text_color"
                                android:enabled="true"
                                android:padding="8dp"
                                android:src="@drawable/ic_star"
                                android:stateListAnimator="@animator/button_scale_state"
                                android:text="sfdfsdfsd"
                                android:textAllCaps="false"
                                android:textColor="@drawable/button_text_color"
                                android:textSize="14sp"
                                app:tint="@color/warning_main" />
                            <ImageButton
                                android:id="@+id/btn_Review_star_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center"
                                android:background="@color/gray_02_100"
                                android:drawablePadding="5dp"
                                android:drawableTint="@drawable/button_text_color"
                                android:enabled="true"
                                android:padding="8dp"
                                android:src="@drawable/ic_star"
                                android:stateListAnimator="@animator/button_scale_state"
                                android:text="sfdfsdfsd"
                                android:textAllCaps="false"
                                android:textColor="@drawable/button_text_color"
                                android:textSize="14sp"
                                app:tint="@color/neutral_focus" />
                            <ImageButton
                                android:id="@+id/btn_Review_star_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center"
                                android:background="@color/gray_02_100"
                                android:drawablePadding="5dp"
                                android:drawableTint="@drawable/button_text_color"
                                android:enabled="true"
                                android:padding="8dp"
                                android:src="@drawable/ic_star"
                                android:stateListAnimator="@animator/button_scale_state"
                                android:text="sfdfsdfsd"
                                android:textAllCaps="false"
                                android:textColor="@drawable/button_text_color"
                                android:textSize="14sp"
                                app:tint="@color/neutral_focus" />
                            <ImageButton
                                android:id="@+id/btn_Review_star_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center"
                                android:background="@color/gray_02_100"
                                android:drawablePadding="5dp"
                                android:drawableTint="@drawable/button_text_color"
                                android:enabled="true"
                                android:padding="8dp"
                                android:src="@drawable/ic_star"
                                android:stateListAnimator="@animator/button_scale_state"
                                android:text="sfdfsdfsd"
                                android:textAllCaps="false"
                                android:textColor="@drawable/button_text_color"
                                android:textSize="14sp"
                                app:tint="@color/neutral_focus" />
                            <ImageButton
                                android:id="@+id/btn_Review_star_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center"
                                android:background="@color/gray_02_100"
                                android:drawablePadding="5dp"
                                android:drawableTint="@drawable/button_text_color"
                                android:enabled="true"
                                android:padding="8dp"
                                android:src="@drawable/ic_star"
                                android:stateListAnimator="@animator/button_scale_state"
                                android:text="sfdfsdfsd"
                                android:textAllCaps="false"
                                android:textColor="@drawable/button_text_color"
                                android:textSize="14sp"
                                app:tint="@color/neutral_focus" />
                        </GridLayout>
                    </LinearLayout>

                    <!--Nhận xét-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginBottom="22dp"
                        android:background="@drawable/background_item_normal"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <!--Tiêu đề-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:letterSpacing="0"
                                android:lineHeight="24sp"
                                android:text="Nhận xét"
                                android:textColor="@color/neutral_main"
                                android:textSize="16sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/neutral_light_border"
                            android:orientation="vertical" />
                        <!--Viết Nhận xét-->
                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="1"
                            android:gravity="left"
                            android:paddingBottom="10dp"
                            android:rowCount="2">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_RequestDetail_description"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_marginBottom="20dp"
                                android:hint="Viết nhận xét ở đây"
                                app:boxBackgroundColor="@color/white"
                                app:boxStrokeColor="@color/gray_02_100"
                                app:boxStrokeWidth="0dp"
                                app:boxStrokeWidthFocused="0dp"
                                app:errorEnabled="true"
                                app:errorIconDrawable="@drawable/ic_error"
                                app:errorIconTint="@color/danger_main"
                                app:errorTextColor="@color/danger_main"
                                app:helperTextTextColor="@color/danger_main">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_Review_comment"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="left"
                                    android:inputType="textMultiLine"
                                    android:padding="0dp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </GridLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"/>
            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/background_border_top"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:visibility="visible">


            <LinearLayout
                android:id="@+id/ll_RequestDetail_group_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:visibility="gone"
                    android:id="@+id/btn_RequestDetail_Cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_button_danger_outline"
                    android:stateListAnimator="@animator/button_scale_state"
                    android:text="HỦY ĐƠN"
                    android:textAllCaps="false"
                    android:textColor="@color/button_color_danger"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.23"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_RequestDetail_group_booking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_RequestDetail_Save"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button_primary_outline"
                    android:stateListAnimator="@animator/button_scale_state"
                    android:text="LƯU ĐƠN"
                    android:textAllCaps="false"
                    android:textColor="@color/button_color_primary"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.23"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_RequestDetail_Booking"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button_primary_filled"
                    android:stateListAnimator="@animator/button_scale_state"
                    android:text="ĐẶT LỊCH"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.23"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_RequestDetail_btn_gr_state_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_RequestDetail_review"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button_primary_outline"
                    android:stateListAnimator="@animator/button_scale_state"
                    android:text="ĐÁNH GIÁ"
                    android:textAllCaps="false"
                    android:textColor="@color/button_color_primary"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.23"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>