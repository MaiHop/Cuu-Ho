<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="7dp">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_date"
        app:tint="@color/gray_02_30" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/tv_name_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gara - Q7"
            android:textSize="16sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_address_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123 Nguyễn Thị Thập, Tân Phong, Quận 7, tp.HCM"
            android:textSize="14sp"
            android:textColor="@color/gray_800"
            />
        <TextView
            android:id="@+id/tv_date_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày đặt: 11 thg 07 2024, 09:09"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/gray_800"
            />
        <TextView
            android:id="@+id/tv_status_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã hoàn thành"
            android:textSize="12sp"
            android:background="@drawable/boder_radius_status_success"
            android:textColor="@color/success_main"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Biển số:"
            android:textSize="12sp"
            android:gravity="right"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_license_plate_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="32A-012345"
            android:textSize="12sp"
            android:gravity="right"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 dịch vụ"
            android:textSize="12sp"
            android:gravity="right"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.000.000đ"
            android:textSize="14sp"
            android:gravity="right"
            android:layout_marginBottom="10dp"
            android:textColor="@color/success_main"/>
    </LinearLayout>
</LinearLayout>